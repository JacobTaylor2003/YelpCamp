<% layout('layout/boilerplate') %>
<form action="/campground" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
    <div class="form-group">
        <label class="form-label" for="title">Campground Title</label>
        <input class="form-control mb-3" type="text" id="title" name="title" required>
        <label class="form-label" for="location">City: (Example: Lincoln, Nebraska)</label>
        <input class="form-control mb-3" type="text" id="location" name="location" required>
        <label class="form-label" for="price">Price: (Example: 100.59)</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">$</span>
            </div>
            <input class="form-control mb-3" type="text" name="price" id="price" required>
        </div>
        <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Upload Images</label>
            <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
          </div>
        <div>
        <label class="form-label" for="description">Description: </label>
        <textarea class="form-control" style="resize: none;"name="description" id="description" cols="30" rows="5" required></textarea>
    </div>
        <div class="input-group mb-3">
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <button class="btn btn-success mb-3" type="submit">Submit</button>
                <a class="btn btn-success mb-3" href="/campground">Back</a>
            </div>
        </div>
    </div>
</form>